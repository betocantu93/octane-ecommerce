{{!-- 
  Add content you wish automatically added to the documents head
  here. The 'model' available in this template can be populated by
  setting values on the 'head-data' service. 
--}}

<title>{{@model.title}}</title>


{{#if @model.canonicalURL}}
  <link rel="canonical" href="http://octane-ecommerce.herokuapp.com/{{@model.canonicalURL}}">
  <meta property="og:url" content="http://octane-ecommerce.herokuapp.com/{{@model.canonicalURL}}">
  <meta name="twitter:url" content="http://octane-ecommerce.herokuapp.com/{{@model.canonicalURL}}">
{{else}}
  <link rel="canonical" href={{@model.ogURL}}>
  <meta property="og:url" content={{@model.ogURL}}>
  <meta name="twitter:url" content={{@model.ogURL}}>
{{/if}}

<meta property="og:site_name" content="Octane Ecommerce">

{{#if @model.ogTitle}}
  <meta property="og:title" content={{@model.ogTitle}}>
{{else}}
  <meta property="og:title" content={{@model.title}}>
{{/if}}

<meta property="og:type" content="website">
<meta property="og:image" content={{if @model.ogArtwork @model.ogArtwork "/logo.png"}}>
<meta property="og:image:width" content="315">
<meta property="og:image:height" content="315">

<meta name="twitter:card" content="summary">
<meta name="twitter:title" content={{if @model.ogTitle @model.ogTitle @model.title}}>
<meta name="twitter:image" content="/logo.png">

{{#if @model.ogDescription}}
  <meta name="description" content="{{@model.ogDescription}}: Find more in octane-ecommerce.herokuapp.com">
  <meta property="og:description" content="{{@model.ogDescription}}: Find more in octane-ecommerce.herokuapp.com">
  <meta name="twitter:description" content="{{@model.ogDescription}}: Find more in octane-ecommerce.herokuapp.com">
{{else if @model.ogTitle}}
  <meta name="description" content="{{@model.ogTitle}}: Find more in octane-ecommerce.herokuapp.com">
  <meta property="og:description" content="{{@model.ogTitle}}: Find more in octane-ecommerce.herokuapp.com">
  <meta name="twitter:description" content="{{@model.ogTitle}}: Find more in octane-ecommerce.herokuapp.com">
{{else}}
  <meta name="description" content="Octane Ecommerce: serverless Ember Octane + algolia + paypal + formspree">
  <meta property="og:description" content="Octane Ecommerce: serverless Ember Octane + algolia + paypal + formspree">
  <meta name="twitter:description" content="Octane Ecommerce: serverless Ember Octane + algolia + paypal + formspree">
{{/if}}